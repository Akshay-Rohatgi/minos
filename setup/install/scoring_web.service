[Unit]
Description=Scoring Engine uWSGi service
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/minos/engine/
ExecStart=/usr/local/bin/uwsgi --ini /opt/minos/engine/etc/uwsgi.ini
ExecStop=/usr/local/bin/uwsgi --stop /opt/minos/engine/etc/uwsgi.pid
ExecReload=/usr/local/bin/uwsgi --reload /opt/minos/engine/etc/uwsgi.pid
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=scoring

[Install]
WantedBy=multi-user.target
